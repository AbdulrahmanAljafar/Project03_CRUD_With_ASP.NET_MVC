<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music_Website</title>
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @if (ViewData["Title"] != "Home Page")
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-light " id="navbar">
                <div class="container">
                    <a class="navbar-brand text-uppercase  Home-nav " href="/">Music<span style="color:red">.</span></a>
                    <div class="collapse navbar-collapse " id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto ">



                            <li class="nav-item">
                                <a class="nav-link text-nav" href="/Musics"><span class="nav-text1">All Music</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-nav" href="/Users"><span class="nav-text1">Channel</span></a>
                            </li>


                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <hr/>
    <div class="footer1">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 item text">
                        <h5>About</h5>
                        <p>Music Channel to find today's top talent, featured artists, and playlists. Subscribe to see the latest in the music world.</p>
                    </div>
                    <div class="col-sm-6 col-md-3 item">

                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h6> Quick Links</h6>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="/Musics">Music</a></li>
                            <li><a href="/Users">Channel</a></li>
                        </ul>
                    </div>

                </div>
                <p class="copyright">Music Website © 2021</p>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
